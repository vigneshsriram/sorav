<hr>
 <span id="map">
       location
     </span>
<div class="detail">
<h3 class="cusineserved">Cuisine Served</h3>
<div class="cuisine">
{{#each restone.obj.cuisine}}
      {{this}}
            {{/each}}
  </div>
  
