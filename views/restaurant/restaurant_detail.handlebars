 <div id="reviewsection">
<div id="commentsection">
    
     <form id="form-group" method="POST">
    <label for="comment">What do you think about this place?</label><br>
     <textarea class="commentbox"  name="comment" id="comment" placeholder="enter comment"></textarea>
     <br>
     <label for="rating">Rate Us</label>
     <select id = "rating" name = "rating" >
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select><br>

     <button id="addcomment">Add Review</button>

     </form>
</div>
<div>
   
   <div id="addreviews">
       {{#each restone.reviews}}
     <div class="onereview">
       <p id="userdetail">{{user}} gave this place {{rating}}/5</p>
        <p>{{comment}}</p>
  </div>
        
   {{/each}}
   </div>
 </div>
</div>
 
